@{
    ViewBag.Title = "Tags";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">

                        <h3>Tags</h3>

        </div>


        <div class="col-md-6">

            <h3>New Tag</h3>
            <form role="form">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input id="title" class="form-control">
                </div>

                <button type="submit" class="btn btn-success">Create Tag</button>
            </form>


        </div>
    </div>
</div>
